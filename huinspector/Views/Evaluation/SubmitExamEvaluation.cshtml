@using huinspector.Models
@model IEnumerable<EvaluationAddModel>
@{
    ViewBag.Title = "Evaluatie opstellen";
    
}

@using (Html.BeginForm("Insert", "Evaluation", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    
    @Html.Hidden("ExamId", Convert.ToInt32(ViewData["ExamID"]))
    
     <table class="table table-hover">
                <tr>
                    <th colspan="2" style="border-top: none;"><h4>Evaluatie</h4></th>
                </tr>
                <tr>
                    <td>
                        @Html.Label("Waardering")
                    </td>
                    <td>
                        @Html.TextBox("Result")
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.Label("Evaluatie")
                    </td>
                    <td>
                        <input name="Document" type="file" />
                    </td>
                </tr>
                <tr>
                    <td>&nbsp;</td>
                    <td>
                        <input type="submit" value="Verstuur evaluatie" class="btn btn-primary" aria-label="Left Align" />
                    </td>
                </tr>
            </table>
}

