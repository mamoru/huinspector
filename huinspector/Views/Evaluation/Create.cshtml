@model huinspector.Models.Evaluation

@{
    ViewBag.Title = "Nieuwe Evaluatie";
}

<h2>Nieuwe Evaluatie</h2>

@using (Html.BeginForm("Create", "Evaluation", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.UserId, "Evaluatie ingevuld door", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("UserId", String.Empty)
                @Html.ValidationMessageFor(model => model.UserId)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ExamId, "Voor examen", new { @class = "control-label col-md-2" })
            <div class="col-md-10">

                @Html.HiddenFor(model => model.ExamId, new { @value = ViewBag.Exam })
                <p>@ViewBag.ExamName</p>

            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Result, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Result)
                @Html.ValidationMessageFor(model => model.Result)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Document, "Document", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="file" id="Document" name="upload" accept="application/vnd.openxmlformats-officedocument.wordprocessingml.document" />
                @Html.ValidationMessageFor(model => model.Document)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Invoeren en document uploaden" class="btn btn-default" />
            </div>
        </div>
    </div>
}