@model huinspector.Models.User
@{
    ViewBag.Title = "Inloggen";
}

<h2>@ViewBag.Title</h2>
<div class="row">
    <div class="col-md-8">
        <section id="loginForm">
            @using (Html.BeginForm("Login", "Login", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <h4>Login om gebruik te maken van HUI Docent.</h4>
                <hr />
                @Html.ValidationSummary(true)
                <div class="form-group">
                    <label class="col-md-2 control-label">Gebruikersnaam</label>
                    <div class="col-md-10">
                        @Html.TextBoxFor(u => u.FirstName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(u => u.FirstName)
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-2 control-label">Wachtwoord</label>
                    <div class="col-md-10">
                        @Html.PasswordFor(u => u.Password, new { @class = "form-control" })
                        @Html.ValidationMessageFor(u => u.Password)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Inloggen" class="btn btn-default" />
                    </div>
                </div>
            }
        </section>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}